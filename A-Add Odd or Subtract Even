#include <bits/stdc++.h>
typedef long long ll;
using namespace std;
#define yes cout << "YES\n"
#define no cout << "NO\n"
#define all(x) (x).begin(), (x).end()
#define gcd(a,b) __gcd(a,b)
#define lcm(a,b) ((a) * (b)) / gcd(a,b)
#define optimize() ios_base::sync_with_stdio(0); cin.tie(0); cout.tie(0);
 
 
void ishan() {
    int a, b;
    cin >> a >> b;
   //int sum1=b-a;
    if(a == b ) cout<<"0\n";
    else if(a < b ){
        if((b-a)%2==1){
            //sum1+=1;
                                   cout<<"1\n";
        }
        //else if(sum1 % 2 == 1)
        else
        {
           // sum1+=2;
           cout<<"2\n";
        }
    }
    else {
      if((a-b)%2==0){
            //sum1-=1;
                       cout<<"1\n";
 
        }
       // else if(sum1 % 2 == 1)
       else
        {
           // sum1-=2;
                       cout<<"2\n";
 
        }
    }
   // cout<<sum1<<endl;
}
int main() {
    optimize();
    int lol;
    cin >> lol;
    while (lol--) {
        ishan();
    }
    return 0;
}
 
