#include <bits/stdc++.h>
using namespace std;
typedef long long ll;
#define pb   push_back
#define yes   cout<<"YES"<<endl
#define no   cout<<"NO"<<endl
#define all(x) (x).begin(), (x).end()
#define    gcd(a,b)      __gcd(a,b)
#define    lcm(a,b)  (a*b)/__gcd(a,b)
#define optimize() ios_base::sync_with_stdio(0);cin.tie(0);cout.tie(0);
void solve(){
int n;
    cin >> n;
    vector<ll> a(n);
    for (int i = 0; i < n; i++) {
        cin >> a[i];
    }
    int m = 1;
    int c = 1;
    for (int i = 1; i < n; i++) {
        if (a[i] >= a[i - 1]) {
            c++;
        } else {
            c = 1;
        }
        m = max(m, c);
            }
    cout << m << "\n";
 
}
int main()
{
    optimize();
//int lol;
    //  cin >> lol;
    //while (lol--) {
    solve();
    // }
    return 0;
}
